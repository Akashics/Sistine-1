<%- include('blocks/header', commands) %>
    <div class="container SistineBestContent">
      <% for (const category in commands) { %>
      <br>
        <h2> <%= category %> Commands </h2>
        <div class="table-responsive" style="border-collapse: collapse; border-spacing: 0;">
        <br>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Aliases</th>
                <th>Usage</th>
                <th>Description</th>
                <th>Command Cost</th>
              </tr>
            </thead>
            <tbody>
              <% for (const command in commands[category]) { %>
                <tr>
                  <td>
                    <%- command.name %>
                  </td>
                  <td>
                      <i>
                      <%- command.aliases.length < 1 ? '<i style="opacity: 0.5;" class="fa fa-times"></li>' : `${command.aliases.join(", ")}` %>
                      </i>
                  </td>
                  <td>
                    <%- `s>${command.usageString.length >= 1 ? `<code id="input">${command.usageString}</code>` : ''} ` %>
                  </td>
                  <td>
                    <%= command.description %>
                  </td>
                  <td><%= command.cost >= 1 ? command.cost + 'Â¥' : 'Free' %></td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
    <% include ./blocks/footer %>
