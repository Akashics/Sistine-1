<%- include('blocks/header', {bot:bot, user: user, auth: auth}) %>

<% const help = {};
bot.commands.forEach((command) => {
  const cat = command.category;
  if (!help.hasOwnProperty(cat)) help[cat] = [];
  help[cat].push(command);
});
%>
<div class="container">
  <h2>Commands</h2>
  <% for (const category in help) { %>
    <br>
    <h3><%= category %></h3>
    <br>
    <div class="card-columns">
      <% for (const command of help[category]) { %>
        <div class="card">
          <h4 class="card-header"><%= command.name.toProperCase() %><i class="fa fa-refresh fa-fw pull-right" aria-hidden="true"></i></h4>
          <div class="card-block">
            <p class="card-text"><%= command.description %></p>
            <h6 class="card-subtitle text-muted">Permission: <%= command.permLevel %><br /><a href="#" data-toggle="modal" data-target="#<%= `${command.help.name}` %>Modal">more...</a></h6>
          </div>
        </div>
        <div id="<%= `${command.help.name}` %>Modal" class="modal fade" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header btn-info disabled">
                <h4 class="modal-title"><%= command.name %></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body">
                <p>Command Base Cost: <%= command.cost || 0 %></p>
                <p>Usage Example: <%= command.usage %></p>
                <p>Extra Details: <%= command.extended %></p>
                <p>Command Aliases: <%= `${command.aliases.join(', ')}` %></p>
                <p>Required Permissions: <strong><%= `${command.botPerms.join(', ')}`%></strong></p>
              </div>
              <div class="modal-footer"><button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button></div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
<% include ./blocks/footer %>